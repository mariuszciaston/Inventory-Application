<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/nav') %>

    <p><%= platformName %> platform:</p>
    <button type="button">Edit</button>
    <button type="button">Delete</button>
    <% if (games && games.length > 0) { %> <% games.forEach(game => { %>
    <p>
      <%= game.title %> | <%= game.released %> | <%= game.genre %> | <%
      game.platforms.forEach((platform, index) => { %> <%= platform %><%= index
      < game.platforms.length - 1 ? ' / ' : '' %> <% }) %>
    </p>
    <% }) %> <% } else { %>
    <p>No games found for this platform.</p>
    <% } %> <%- include('partials/goBack') %>

    <!-- <%- include('partials/footer') %> -->
  </body>
</html>
