<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>

    <p><%= platformName %> platform:</p>

    <a href="/platforms/<%= platform.platform_id %>/edit">Edit</a>

    <form
      method="POST"
      action="/platforms/<%= platform.platform_id %>/delete"
      style="display: inline"
    >
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this platform?')"
      >
        Delete
      </button>
    </form>

    <% if (games && games.length > 0) { %> <% games.forEach(game => { %>
    <p>
      <%= game.title %> | <%= game.released %> | <%= game.genre || 'Undefined genre' %> | <% game.platforms.forEach((platform, index) => { %> <%=
      platform %><%= index < game.platforms.length - 1 ? ' / ' : '' %> <% }) %>
    </p>
    <% }) %> <% } else { %>
    <p>No games found for this platform.</p>
    <% } %> <%- include('../partials/goBack') %>

    <!-- <%- include('../partials/footer') %> -->
  </body>
</html>
