<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/nav') %>

    <form
      action="/platforms/<%= platform.platform_id %>/edit"
      method="post"
      onsubmit="return handleEditAction(this)"
    >
      <p><label for="name">Edit platform:</label></p>

      <%- include('../partials/showError') %>

      <input
        type="text"
        id="name"
        name="name"
        value="<%= platform.name %>"
        required
      />
      <input type="hidden" name="adminPassword" id="adminPasswordField" />
      <button type="submit">Update</button>
    </form>

    <script src="/admin.js"></script>

    <br />
    <%- include('../partials/goBack') %>

    <!-- <%- include('../partials/footer') %> -->
  </body>
</html>
